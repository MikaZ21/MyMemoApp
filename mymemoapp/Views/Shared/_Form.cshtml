@model MemoViewModel

<form asp-action="Insert" id="form-action" method="post" class="form-horizontal" role="form">
    <div asp-validation-summary="All" class=text-danger></div>

    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
            <label asp-asp-for="Memo.Name"  class="form-label">Type down your memo</label>
            <input asp-for="Memo.Id" type="hidden"  class="form-control" />
            <input asp-for="Memo.Name"  class="form-control" />
            <span asp-validation-for="Memo.Name" class="text-danger"></span>
        </div>    
    </div>
    <div  class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 mt-3 mb-5">
             <input type="submit" id="form-button" value="Add Memo" />
        </div>
    </div>
</form>