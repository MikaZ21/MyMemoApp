@model MemoViewModel

<form asp-action="Insert" id="form-action" method="post" class="form-horizontal" role="form">
    <div asp-validation-summary="All" class=text-danger></div>

    <div class="row justify-content-center">
        <div>
            <label asp-asp-for="Memo.Name"  class="form-label">Type your memo:</label>
            <input asp-for="Memo.Id" type="hidden"  class="form-control" />
            <textarea asp-for="Memo.Name" class="form-control memo-box" oninput='this.style.height = "";this.style.height = this.scrollHeight + "px"'></textarea>
            <span asp-validation-for="Memo.Name" class="text-danger"></span>
        </div>    
    </div>
    <div>
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 mt-3 mb-5">
             <input type="submit" id="form-button" class="btn btn-success" value="Add Memo" />
        </div>
    </div>
</form>